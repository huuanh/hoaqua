<tr id="product-<%= product.id %>">
  <td><%= product.name %></td>
  <td><%= product.price %></td>
  <td><%= product.description %></td>
  <td><%= product.make %></td>
  <td><%= link_to 'edit', edit_admin_product_path(product), remote: true %></td>
  <td><%= link_to 'del', admin_product_path(product), method: :delete, remote: true %></td>
</tr>